<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:RMIDispenseSequenceEditor.Helpers">

    <!-- Base brushes -->
    <SolidColorBrush x:Key="ProteinBrush" Color="#F48FB1"/>
    <!-- Light blue -->
    <SolidColorBrush x:Key="WellBrush" Color="#90CAF9"/>
    <SolidColorBrush x:Key="SeedBrush" Color="#A5D6A7"/>
    <SolidColorBrush x:Key="FragmentBrush" Color="#FFFACD"/>
    <SolidColorBrush x:Key="AdditiveBrush" Color="LightCyan"/>
    <!-- Light green -->
    <SolidColorBrush x:Key="HoverOverlay" Color="#22000000"/>
    <!-- Transparent gray overlay -->
    <SolidColorBrush x:Key="SelectedOverlay" Color="#44000000"/>
    <!-- Stronger overlay -->

    <!-- Border Style for Ingredient Items -->
    <Style x:Key="IngredientBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="#F0F0F0"/>
        <Setter Property="BorderBrush" Value="#CCC"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="20,2,20,2"/>

        <!-- Normal color triggers -->
        <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="Well">
                <Setter Property="Background" Value="#90CAF9"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Additive">
                <Setter Property="Background" Value="LightCyan"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Protein">
                <Setter Property="Background" Value="#F48FB1"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Seed">
                <Setter Property="Background" Value="#A5D6A7"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Fragment">
                <Setter Property="Background" Value="#FFFACD"/>
            </DataTrigger>

            <!-- When animated -->
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=(helpers:IngredientHelper.IsAnimated)}" Value="True">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <!-- Text Style for Ingredient Items -->
    <Style x:Key="IngredientTextStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
        <!-- <Setter Property="VerticalAlignment" Value="Center"/> -->
        <!-- <Setter Property="TextAlignment" Value="Center"/> -->
        <Setter Property="Margin" Value="5"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding}" Value="Protein">
                <Setter Property="Foreground" Value="#660000"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Buffer">
                <Setter Property="Foreground" Value="#004400"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Well">
                <Setter Property="Foreground" Value="#002266"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Seed">
                <Setter Property="Foreground" Value="#663300"/>
            </DataTrigger>
            <DataTrigger Binding="{Binding}" Value="Fragment">
                <Setter Property="Foreground" Value="#665500"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
