<UserControl x:Class="RMIDispenseSequenceEditor.Views.IngredientsTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:RMIDispenseSequenceEditor.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">

    <UserControl.Resources>
        <!-- Merge shared ingredient color styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RMIDispenseSequenceEditor;component/Styles/IngredientsColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <!-- ⚠️ Removed all BeginStoryboard / EventTrigger sections -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== Headers ===== -->
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="#CCC" BorderThickness="0,0,1,1">
            <TextBlock Text="Column 1" FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" Padding="0,4"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#CCC" BorderThickness="0,0,1,1">
            <TextBlock Text="Column 2" FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" Padding="0,4"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="2" BorderBrush="#CCC" BorderThickness="0,0,0,1">
            <TextBlock Text="Column 3" FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" Padding="0,4"/>
        </Border>

        <!-- ===== Ingredient Area ===== -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1 -->
            <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="0,0,1,0">
                <ItemsControl x:Name="Column1List" ItemsSource="{Binding Column1Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical">
                                <StackPanel.LayoutTransform>
                                    <ScaleTransform ScaleY="-1"/>
                                </StackPanel.LayoutTransform>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <!-- flip each item back upright -->
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleY="-1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Outer container with single transform -->
                            <Grid RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Grid.RenderTransform>

                                <Border Style="{StaticResource IngredientBorderStyle}"
                                        helpers:IngredientHelper.IsAnimated="True"
                                        Margin="0" Padding="6,2"
                                        SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding}"
                                               Style="{StaticResource IngredientTextStyle}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Border>

            <!-- Column 2 -->
            <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="0,0,1,0">
                <ItemsControl x:Name="Column2List" ItemsSource="{Binding Column2Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical">
                                <StackPanel.LayoutTransform>
                                    <ScaleTransform ScaleY="-1"/>
                                </StackPanel.LayoutTransform>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <!-- flip each item back upright -->
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleY="-1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ItemsControl.ItemContainerStyle>

                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Outer container with single transform -->
                            <Grid RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Grid.RenderTransform>

                                <Border Style="{StaticResource IngredientBorderStyle}"
                                        helpers:IngredientHelper.IsAnimated="True"
                                        Margin="0" Padding="6,2"
                                        SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding}"
                                               Style="{StaticResource IngredientTextStyle}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Border>

            <!-- Column 3 -->
            <Border Grid.Column="2" BorderBrush="#CCC" BorderThickness="0,0,0,0">
                <ItemsControl x:Name="Column3List" ItemsSource="{Binding Column3Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical">
                                <StackPanel.LayoutTransform>
                                    <ScaleTransform ScaleY="-1"/>
                                </StackPanel.LayoutTransform>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <!-- flip each item back upright -->
                    <ItemsControl.ItemContainerStyle>
                        <Style TargetType="ContentPresenter">
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleY="-1"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ItemsControl.ItemContainerStyle>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Outer container with single transform -->
                            <Grid RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <TranslateTransform Y="0"/>
                                </Grid.RenderTransform>

                                <Border Style="{StaticResource IngredientBorderStyle}"
                                        helpers:IngredientHelper.IsAnimated="True"
                                        Margin="0" Padding="6,2"
                                        SnapsToDevicePixels="True">
                                    <TextBlock Text="{Binding}"
                                               Style="{StaticResource IngredientTextStyle}"
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                </ItemsControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
