<UserControl x:Class="RMIDispenseSequenceEditor.Views.IngredientsTableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:RMIDispenseSequenceEditor.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">

    <UserControl.Resources>
        <!-- Merge shared ingredient color styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RMIDispenseSequenceEditor;component/Styles/IngredientsColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- =================== TABLE =================== -->
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Ingredient table -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ===== Headers ===== -->
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="#CCC" BorderThickness="0,0,1,1">
            <TextBlock Text="Column 1"
                       FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Padding="0,4"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#CCC" BorderThickness="0,0,1,1">
            <TextBlock Text="Column 2"
                       FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Padding="0,4"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="2" BorderBrush="#CCC" BorderThickness="0,0,0,1">
            <TextBlock Text="Column 3"
                       FontWeight="Bold" FontSize="14"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Padding="0,4"/>
        </Border>

        <!-- ===== Ingredient Area ===== -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0"
              VerticalAlignment="Top"> <!-- keeps border height exactly to content -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Column 1 -->
            <Border Grid.Column="0" BorderBrush="#CCC" BorderThickness="0,0,1,0" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding Column1Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Margin="0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource IngredientBorderStyle}"
                                    Margin="0" Padding="6,2"
                                    SnapsToDevicePixels="True">
                                <TextBlock Text="{Binding}"
                                           Style="{StaticResource IngredientTextStyle}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Column 2 -->
            <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="0,0,1,0" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding Column2Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Margin="0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource IngredientBorderStyle}"
                                    Margin="0" Padding="6,2"
                                    SnapsToDevicePixels="True">
                                <TextBlock Text="{Binding}"
                                           Style="{StaticResource IngredientTextStyle}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Column 3 -->
            <Border Grid.Column="2" BorderBrush="#CCC" BorderThickness="0,0,0,0" VerticalAlignment="Top">
                <ItemsControl ItemsSource="{Binding Column3Ingredients}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" Margin="0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource IngredientBorderStyle}"
                                    Margin="0" Padding="6,2"
                                    SnapsToDevicePixels="True">
                                <TextBlock Text="{Binding}"
                                           Style="{StaticResource IngredientTextStyle}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>
        </Grid>
    </Grid>
</UserControl>
