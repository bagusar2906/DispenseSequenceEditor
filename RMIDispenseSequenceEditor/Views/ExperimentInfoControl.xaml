<UserControl x:Class="RMIDispenseSequenceEditor.Views.ExperimentInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:RMIDispenseSequenceEditor.Views"
             Width="600">

    <UserControl.Resources>
        <!-- Merge shared ingredient color styles -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="pack://application:,,,/RMIDispenseSequenceEditor;component/Styles/RMIntegration.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
    <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="6" Padding="15 ">
        <StackPanel Orientation="Vertical">

            <!-- =============== PROPERTY TABLE =============== -->
            <views:ExperimentPropertyControl BorderBrush="#DDD" BorderThickness="2" />


            <!-- ================== Dispensing Property =================== -->
            <Border BorderBrush="#DDD" BorderThickness="2" Margin="0,10,0,0">
                <StackPanel Margin="5,5,5,5">
                    <views:DispensePropertiesControl BorderBrush="#DDD" BorderThickness="2" />

                    <!-- ============== LCP Section ============== -->
                    <views:LCPDispensePropertiesControl Margin="0,5,0,0" BorderBrush="#DDD" BorderThickness="2" />
                </StackPanel>
            </Border>
            
        </StackPanel>
    </Border>
    <!-- ============== START OVER BUTTON ============== -->
    <Button Content="I Want to Start Over"
            HorizontalAlignment="Center"
            Padding="12 6"
            Margin="0 20 0 10" />
    </StackPanel>
</UserControl>