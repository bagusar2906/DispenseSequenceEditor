<UserControl x:Class="RMIDispenseSequenceEditor.Views.ChipControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Pull IngredientColor styles -->
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RMIDispenseSequenceEditor;component/Styles/IngredientsColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Border x:Name="ChipBorder"
            Style="{StaticResource IngredientBorderStyle}"
            CornerRadius="5"
            Padding="6"
            Margin="4"
            SnapsToDevicePixels="True">
        
        <Border.Effect>
            <DropShadowEffect Color="#33000000"
                              BlurRadius="6"
                              ShadowDepth="1"
                              Opacity="0.2"/>
        </Border.Effect>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       FontSize="14"
                       Foreground="#333"
                       Style="{StaticResource IngredientTextStyle}"
                       Margin="0,0,6,0" />
            
            <Button Width="14"
                    Height="14"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Cursor="Hand"
                    Command="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=RemoveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Text}"
                    >

                <Grid Width="14" Height="14">
                    <!-- Perfect Circle -->
                    <Border Width="16"
                            Height="16"
                            CornerRadius="7"
                            Background="Gray"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>

                    <!-- Centered X -->
                    <TextBlock Text="×"
                               Foreground="White"
                               FontSize="15"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                </Grid>
            </Button>



        </StackPanel>
    </Border>

    <UserControl.Template>
        <ControlTemplate TargetType="UserControl">
            <Border x:Name="ChipBorder"
                    Background="White"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="4"
                    Margin="4">

                <!-- Present your original UI -->
                <ContentPresenter/>

            </Border>

            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="ChipBorder" Property="Background" Value="#F0F0F0"/>
                    <Setter TargetName="ChipBorder" Property="BorderBrush" Value="#BBBBBB"/>
                </Trigger>
            </ControlTemplate.Triggers>

        </ControlTemplate>
    </UserControl.Template>

</UserControl>